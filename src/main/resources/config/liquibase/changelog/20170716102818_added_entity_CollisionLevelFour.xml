<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity CollisionLevelFour.
    -->
    <changeSet id="20170716102818-1" author="jhipster">
        <createTable tableName="collision_level_four">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="exam_collision" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="collision_level_three_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
        <createTable tableName="collision_level_four_source_appointment">
            <column name="source_appointments_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="collision_level_fours_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="collision_level_fours_id, source_appointments_id" tableName="collision_level_four_source_appointment"/>
        
        <createTable tableName="collision_level_four_target_appointment">
            <column name="target_appointments_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="collision_level_fours_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="collision_level_fours_id, target_appointments_id" tableName="collision_level_four_target_appointment"/>
        
    </changeSet>
</databaseChangeLog>
