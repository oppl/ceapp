<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Appointment.
    -->
    <changeSet id="20170709150643-1" author="jhipster">
        <createTable tableName="appointment">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="start_date_time" type="timestamp">
                <constraints nullable="false" />
            </column>

            <column name="end_date_time" type="timestamp">
                <constraints nullable="false" />
            </column>

            <column name="is_exam" type="boolean">
                <constraints nullable="false" />
            </column>

            <column name="room" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="theme" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="lva_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="appointment" columnName="start_date_time" columnDataType="datetime"/>
        <dropDefaultValue tableName="appointment" columnName="end_date_time" columnDataType="datetime"/>
        
    </changeSet>
</databaseChangeLog>
